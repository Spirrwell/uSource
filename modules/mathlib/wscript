import waflib
 
def options(opt):
	return

def configure(conf):
	return

def build(bld):
	defines = []
	
	source = list()
	source += [
		'vector.cpp',
		#'mconst.h',
		#'mathlib.h',
		#'vector.h',
		#'matrix.h',
		'matrix.cpp',
		'mathlib.cpp'
	]

	includes = list()
	includes.append('.')
	includes.append(str(bld.env.ROOT))

	libs = []

	bld.stlib(
		source   = source,
		target   = 'mathlib',
		features = 'cxx',
		includes = includes,
		#defines  = defines,
		use      = libs,
		install_path = bld.env.LIBDIR,
		subsystem = bld.env.MSVC_SUBSYSTEM,
		idx      = 2
	)

